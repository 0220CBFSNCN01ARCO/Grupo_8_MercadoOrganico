<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

<body>
    <div class="container-fluid">
        <%- include('./partials/header') %>
        <div>
            <h1 class="h2 h1-md font-weight-bolder text-center">Iniciar sesión</h1>
        </div>
        <!-- Login formulario -->
        <div class="row justify-content-md-center">
            <div class="col-md-7 hola">
                <% if (typeof errors != 'undefined') { %>
                 <p style='color: red'>ERROR</p>
                 <ul>
                     <% for( let i = 0; i < errors.length; i++ ) { %>
                        <li>
                            <%= errors[i].msg %>
                        </li>
                     <% } %>
                 </ul>
                <% } %>
                <form id="login-form" action="" method="POST" class="form">
                    <div class="form-group hola">
                        <label class="form-label " for="email">Email</label>
                        <input type="" class="form-control" autocorrect="off" autocapitalize="off" name="email">
                    </div>

                    <div class="form-group ">
                        <label class="form-label " for="password">Contraseña</label>
                        <input type="password" class="form-control" autocorrect="off" autocapitalize="off" autocomplete="off" name="password">
                            <div class="mt-4 text-center">
                                <a href="#!" class="btn-link ">¿Olvidaste tu contraseña?</a>
                                <br>
                                <a href="/users/register" class="btn-link ">Crear Cuenta</a>
                            </div>
                    </div>
                    <input class="btn btn-primary btn-block boton-iniciarsesion" type="submit" value="INICIAR SESIÓN" name="">

                </form>
            </div>
        </div>
    </div>

    <div>
        <%- include('./partials/footer') %>
    </div>

    <%- include('./partials/scriptsBootstrap') %>
</body>

</html>