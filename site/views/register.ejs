<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

<body>
    <div class="container-fluid">
        <%- include('./partials/header') %>
        <br>
        <br>
        <br>
        <div>
            <h1 class="h2 h1-md font-weight-bolder text-center">Crear Cuenta</h1>
        </div>
        
        <!-- Formulario de Registracion -->
        <div class="row justify-content-md-center">
            <div class="col-md-7">
                <form id="login-form" action="" method="post" class="form ">
                    <div class="form-group">
                        <label class="form-label " for="nombre">Nombre</label>
                        <input type="" class="form-control" autocorrect="off" autocapitalize="off" name="nombre">
                    </div>

                    <div class="form-group">
                      <label class="form-label " for="apellido">Apellido</label>
                      <input type="" class="form-control" autocorrect="off" autocapitalize="off" name="apellido">
                    </div>

                  <div class="form-group">
                    <label class="form-label " for="email">Email</label>
                    <input type="" class="form-control" autocorrect="off" autocapitalize="off" name="email">
                  </div>

                  <div class="form-group">
                    <label class="form-label " for="telefono">Telefono</label>
                    <input type="" class="form-control" autocorrect="off" autocapitalize="off" name="telefono">
                  </div>

                <div class="form-group ">
                    <label class="form-label " for="password">Contraseña</label>
                    <input type="password" class="form-control" autocorrect="off" autocapitalize="off" autocomplete="off" name="password">
                    <div class="form-group ">
                      <label class="form-label " for="repeat_password">Repetir Contraseña</label>
                      <input type="password" class="form-control" autocorrect="off" autocapitalize="off" autocomplete="off" name="repeat_password">
                    </div>
                    <br>
                </div>

                <div>
                  <label for="avatar">Avatar</label>
                  <input type="file" name="avatar" id="avatar" accept="image/x-png,image/gif,image/jpeg">
                </div>

                <input class="btn btn-primary btn-block boton-iniciarsesion" type="submit" value="REGISTRARSE" name="">

                </form>
            </div>
        </div>
    </div>

    <div>
        <%- include('./partials/footer') %>
    </div>

    <%- include('./partials/scriptsBootstrap') %>
</body>

</html>