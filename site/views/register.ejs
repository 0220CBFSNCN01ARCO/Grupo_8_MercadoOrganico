<!DOCTYPE html>
<html>
<%- include('./partials/head') %>

<body>
  <div class="container-fluid">
    <%- include('./partials/header') %>
    <br>
    <br>
    <br>
    <div>
      <h1 class="h2 h1-md font-weight-bolder text-center">Crear Cuenta</h1>
    </div>
    <% if(typeof errors != 'undefined') {%>
    <div class="alert alert-danger text-center" role="alert">
      <% errors.forEach(error => {%>
      <h5><%- error.msg %></h5>
      <% })%>
    </div>
    <% } %>
    <!-- Formulario de Registracion -->
    <div class="row justify-content-md-center">
      <div class="col-md-7">
        <form id="login-form" action="" method="POST" class="form" enctype="multipart/form-data">

          <div class="form-group">
            <!-- NOMBRE -->
            <label class="form-label" for="nombre">Nombre</label>
            <input type="text" class="form-control" name="nombre" placeholder="Ingrese su nombre" required
              value=
              <% if(!userToReload) { %>
                <%= '' %>
              <% } else { %>
                <%= `${userToReload.name}` %>
              <% } %>
                >

          </div>

          <div class="form-group">
            <!-- APELLIDO -->
            <label class="form-label " for="apellido">Apellido</label>
            <input type="text" class="form-control" name="apellido" placeholder="Ingrese su apellido" required
              value=
              <% if(!userToReload) { %>
                <%= '' %>
              <% } else { %>
                <%= `${userToReload.last_name}` %>
              <% } %>
                >

          </div>

          <div class="form-group">
            <!-- EMAIL -->
            <label class="form-label " for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Ingrese su e-mail" required
              value=
              <% if(!userToReload) { %>
                <%=  %>
              <% } else { %>
                <%= `${userToReload.email}` %>
              <% } %>
                >

          </div>

          <div class="form-group ">
            <!-- PASSWORD -->
            <label class="form-label " for="password">Contrase単a</label>
            <input type="password" class="form-control" name="password" placeholder="Ingrese una contrase単a" required>

          </div>

          <div class="form-group ">
            <!-- REPETIR PASSWORD -->
            <label class="form-label " for="repeat_password">Repetir Contrase単a</label>
            <input type="password" class="form-control" autocorrect="off" name="repeat_password" placeholder="Repita la contrase単a" required>

          </div>

          <div class="form-gropu">
            <!-- AVATAR -->
            <label for="avatar">Avatar</label>
            <input type="file" name="avatar" id="avatar" accept="image/x-png,image/gif,image/jpeg">

          </div>

          <input class="btn btn-primary btn-block boton-iniciarsesion" type="submit" value="REGISTRARSE" name="">

        </form>
      </div>
    </div>
  </div>
  <div>
    <%- include('./partials/footer') %>
  </div>

  <%- include('./partials/scriptsBootstrap') %>
</body>

</html>