<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <div class="container">
            <%- include('../partials/header') %>
        </div>
        <div class="container">
            <form action="?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="nombre-producto">Nombre del Producto</label>
                    <input type="text" class="form-control" name="nombreProducto" value="<%=producto.name%>" id="nombre-producto" placeholder="Ingrese nombre del producto">
                </div>

                <div class="form-group">
                    <label for="marca">Marca</label>
                    <select class="form-control" name="marca" id="marca" >
                        <option value="<%=producto.id_brand%>"> <%= marcaDeProducto.name %> </option>
                        <% brands.forEach( unaMarca => { %>
                         <option value="<%= unaMarca.id %> "> <%= unaMarca.name %> </option>
                        <% }) %>
                      </select>
                </div>


                <div class="form-group">
                    <label for="categoría">Categoría</label>
                    <select class="form-control" name="categoria" id="categoria" value="<%=producto.categoria%>">
                        <option value="<% producto.id_category %>"> <%= categoriaDeProducto.name %> </option>
                        <% categories.forEach( unaCategoria => { %>
                         <option value="<%= unaCategoria.id %> "> <%= unaCategoria.name %> </option>
                        <% }) %>
                      </select>
                </div>


                <div class="form-group">
                    <label for="descripcion">Descripción</label>
                    <textarea class="form-control" name="descripcion" id="" cols="30" rows="10" value="<%=producto.description%>"></textarea>
                </div>

                <div class="form-group">
                    <label for="precio">Precio</label>
                    <input type="number" class="form-control" name="precio" id="precio" value="<%=producto.price%>">
                </div>

                <div class="form-group">
                    <label for="precio">Descuento</label>
                    <input type="number" class="form-control" name="descuento" id="precio" value="<%=producto.discount%>">
                </div>

                <!-- FALTA INSERTAR IMAGEN -->
                <div class="form-group">
                    <label for="exampleFormControlFile1"></label>
                    <input type="file" name="imagen-producto" class="form-control-file" id="Subirarchivo" accept="image/x-png,image/gif,image/jpeg" value="<%=producto.imagenProducto%>">
                </div>

                <button type="submit" class="btn btn-primary mb-2">Actualizar Producto</button>

            </form>
        </div>

        <%- include('../partials/scriptsBootstrap') %>
    </body>
</html>



