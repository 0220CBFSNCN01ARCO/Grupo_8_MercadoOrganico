<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <div class="container">
            <%- include('../partials/header') %>
        </div>
        <div class="container">
            <form action="?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="nombre-producto">Nombre del Producto</label>
                    <input type="text" class="form-control" name="nombreProducto" id="nombre-producto" value="<%= producto.name %>">
                </div>

                <div class="form-group">
                    <label for="marca">Marca</label>
                    <input type="text" class="form-control" name="marca" id="marca" value="<%= producto.brand %>">
                </div>

                <div class="form-group">
                    <label for="categoría">Categoría</label>
                    <select class="form-control" name="categoria" id="categoria" value="<%= producto.category %>">
                        <option hidden disabled selected>Elegir Categoria</option>
                        <option>Suplemento</option>
                        <option>Semillas</option>
                        <option>Frutos Secos</option>
                        <option>Vegano</option>
                        <option>Celiaco</option>
                      </select>
                </div>

                <div class="form-group">
                    <label for="descripcion">Descripción</label>
                    <input type="text" class="form-control" name="descripcion" id="" value="<%= producto.description %>">
                </div>

                <div class="form-group">
                    <label for="precio">Precio</label>
                    <input type="number" class="form-control" name="precio" id="precio" value="<%= producto.price %>">
                </div>

                <div class="form-group">
                    <label for="exampleFormControlFile1"></label>
                    <input type="file" name="imagen-producto" class="form-control-file" id="Subirarchivo" value="<%= producto.image %>" accept="image/x-png,image/gif,image/jpeg">
                </div>

                <button type="submit" class="btn btn-primary mb-2">Editar</button>

            </form>
        </div>

        <%- include('../partials/scriptsBootstrap') %>
    </body>
</html>