<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
  <div class="container-fluid">
    <div>
        <header>
            <h2>Listado de usuarios</h2>
        </header>
    </div>
    <div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Administrador</th>
          </tr>
        </thead>
        <% users.forEach( user => { %>
          <tbody>
            <tr>
              <th scope="row"><%= user.id %> </th>
              <td><%= user.name %></td>
              <td><%= user.last_name %> </td>
              <td><%= user.email %> </td>
              <% if(user.id_type == 1) { %>
                <td> ADMIN </td>
                <% } else { %>
                 <td> Client </td>
                <% } %>
              <td><a href="/admin/users/edit/<%= user.id %>"><button type="button" class="btn-secondary">EDITAR</button></a></td>
              <td><a href="/admin/users/delete/<%= user.id %>"><button type="button" class="btn-secondary">ELIMINAR</button></a></td>
            </tr>
          </tbody>
        <% }) %>
      </table>
    </div>
  </div>
  <%- include('../partials/scriptsBootstrap') %>
</body>
</html>